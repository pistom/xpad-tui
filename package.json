{
  "name": "xpad-tui",
  "version": "0.1.0",
  "description": "TUI for managing xpad sticky notes",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "xpad-tui": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "postbuild": "chmod +x dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:run": "npm run build && node dist/index.js",
    "start": "node dist/index.js",
    "test": "jest --config=jest.config.cjs",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@inkjs/ui": "^1.0.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "ink": "^4.0.0",
    "react": "^18.2.0",
    "tmp": "^0.2.1",
    "which": "^6.0.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/react": "^19.2.7",
    "@types/tmp": "^0.2.6",
    "@types/which": "^3.0.4",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^8.57.1",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
